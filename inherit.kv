<Button>
    font_size: 32
    background_normal: ""
    background_color: (.6, .8, .5, 1)

<TextInput>
    background_color: (.9, .8, .7, 1)

<Label>
    #font_size: 32 # Sets all text elements


<MyLayout>
    # canvas.before:
    #     Color:
    #         rgba: (.2, .3, .8, 1)
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 10
        spacing: 10

        Image:
            source: "images/art-of-rally.png"
            allow_stretch: True
            keep_ratio: False

        Label:
            text: "Name"
            font_size: 45
            background_color: (1, 0, .5, 1)
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Text Properties
            color: (.1, .8, .5, 1)
            bold: True
            italic: True
            outline_color: (.1, .1, .1)
            outline_width: 5

        TextInput:
            multiline: False

        Button:
            text: "Clear"
        

