#:import utils kivy.utils
<MyGridLayout>

    name: name
    pizza: pizza
    color: color

    GridLayout:
    
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False
                background_color: utils.get_color_from_hex("#eefa00") # Hex values
            
            Label:
                text: "Favorite Pizza"
            TextInput:
                id: pizza
                multiline: False
            
            Label:
                text: "Favorite Color"
            TextInput:
                id: color
                multiline: False
        
        Button:
            text: "Submit"
            font_size: 32
            on_press: root.action()
            #RGB - a
            background_normal: ""
            background_color: (100/255.0, 0/255.0, 255/255.0, 1) # RGB values
            #background_color: utils.get_color_from_hex("#eefa00") # Hex values
            