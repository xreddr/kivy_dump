<MyLayout>

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        Button:
            text: "Hello World"
            

        RoundedButton:
            text: "Goodbye World"
            pos_hint: {"center_x": 0.5}
            size_hint: (1, .3)
            background_normal: ""
            on_press: print("Goodbye")


<RoundedButton@Button>
    background_normal: ""
    background_color: (0, 0, 0, 0)
    canvas.before:
        Color:
            rgba: (1, 0, 0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [50]
